//812. Largest Triangle Area in java..
//for three points (x1,y1),(x2,y2),(x3,y3)
//formula is Area = 1/2*[x1*(y2-y3) + x2*(y3-y1) + x3*(y1-y2)]

class Solution {
    public double largestTriangleArea(int[][] points) {
        int n = points.length;
        double maxArea = 0.0;
        for (int i = 0; i < n; i++) {
            for (int j = i + 1; j < n; j++) {
                for (int k = j + 1; k < n; k++) {
                    double area = triangle(points[i], points[j], points[k]);
                    maxArea = Math.max(area, maxArea);
                }
            }
        }
        return maxArea;
    }

    private double triangle(int[] a, int[] b, int[] c) {
        return 0.5 * Math.abs(a[0] * (b[1]- c[1]) + b[0] * (c[1] - a[1]) + c[0] * (a[1] - b[1]));
    }

}
