//438. Find All Anagrams in a String in java....




class Solution {
    public List<Integer> findAnagrams(String s, String p) {

        List<Integer> ans = new ArrayList<>();

        int[] phash = new int[26];
        int[] shash = new int[26];

        int plen = p.length();
        int slen = s.length();
        
        if(plen>slen){
            return ans;
        }
        
        // predefine p's window

        for(int i = 0; i<plen; i++){
            phash[p.charAt(i) - 'a']++;
            shash[s.charAt(i) - 'a']++;
        }

        int left = 0;
        int right = plen -1;

        while(right < slen){
            if(Arrays.equals(phash,shash)){
                ans.add(left);
            }

            right++;
            if(right != slen){
                shash[s.charAt(right) - 'a']++;
                shash[s.charAt(left) - 'a']--;
                left++;
            }
        }
        return ans;


        
    }
}
