//3349. Adjacent Increasing Subarrays Detection I in java...



class Solution {
    public boolean hasIncreasingSubarrays(List<Integer> nums, int k) {
        int n = nums.size();

        for (int i = 0; i <= n - 2 * k; i++) {
            boolean combo1 = true;

            for (int j = i; j < i + k - 1; j++) {
                if (nums.get(j) >= nums.get(j + 1)) {
                    combo1 = false;
                    break;
                }
            }

            if (combo1) {
                boolean combo2 = true;
                for (int p = i + k; p < i+ 2*k  - 1; p++) {
                    if (nums.get(p) >= nums.get(p + 1)) {
                        combo2 = false;
                        break;
                    }
                }

                if (combo2) {
                    return true;

                }
            }

        }

        return false;
    }
}
