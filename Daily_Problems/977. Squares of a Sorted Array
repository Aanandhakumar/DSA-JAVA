//977. Squares of a Sorted Array in java...

class Solution {
    public int[] sortedSquares(int[] nums) {
        int n = nums.length;

        int i = 0;
        int j = n-1;
        int pos = n -1;
        int[] ans = new int[n];

        while(i<=j){
            if(Math.abs(nums[i]) > Math.abs(nums[j])){
              ans[pos--] = nums[i]*nums[i];
              i++;
            }else{
                ans[pos--] = nums[j]*nums[j];
                j--;
            }
        }
        return ans;
    }
}
