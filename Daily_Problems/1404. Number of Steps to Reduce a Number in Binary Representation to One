//1404. Number of Steps to Reduce a Number in Binary Representation to One in java...



class Solution {
    public int numSteps(String s) {
        int n = s.length();
        int ans = 0, carry = 0;

        for(int i = n -1; i>=1; i--){
            if((s.charAt(i)-'0' + carry) % 2 == 1){
                ans += 2;
                carry = 1;
            }else{
                ans += 1;
            }
        }

        return ans+carry;
    }
}
