//74. Search a 2D Matrix in java...



class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {

        int n = matrix.length;
        int m = matrix[0].length;

        int left = 0;
        int right = n*m - 1;

        while(left <= right){
            int mid = (left+right)/2;
            int curr = matrix[mid/n][mid%n];
            if(curr == target){
                return true;
            }else if(curr > target){
                right = mid -1;
            }else{
                left = mid + 1;
            }
        }
        return false;
        
    }
}
