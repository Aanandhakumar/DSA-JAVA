//Approach 2....

class Solution {
    private static final int mod = 1_000_000_007;
    public int concatenatedBinary(int n) {

        long result = 0;
        int bitLen  = 0;
        for(int i = 1; i<=n; i++){
            if((i &(i-1))== 0){
                bitLen++;
            }
            result = ((result<<bitLen)+i) % mod;;
        }
        return (int) result;

    }
}

