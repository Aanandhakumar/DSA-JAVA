//202. Happy Number in java...


class Solution {
    public boolean isHappy(int n) {

        Set<Integer> usedNo = new HashSet<>();
        while(true){
            int sum = 0;
            while(n != 0){
                sum += Math.pow(n%10 , 2.0);
                n /= 10;
            }

            if(sum == 1) return true;

            n = sum;
           
            if(usedNo.contains(n)){
                return false;
            }

            usedNo.add(n);

        }
    }
}
